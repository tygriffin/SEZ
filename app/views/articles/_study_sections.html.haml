- unless @article.vocab.blank?
  %section.study-section.vocab
    %h3 Vocabulary
    %ol
      - @article.vocab.each do | vocab |
        = content_tag :li, :id => vocab.word.tr(" ", "_")+'_detail' do
          <strong>#{vocab.word}</strong> (#{vocab.part_of_speech}): #{vocab.definition} 【#{vocab.translation}】

- unless @article.culture_notes.blank?
  %section.study-section.culture-notes
    %h3 Culture Notes
    %ol
      - @article.culture_notes.each do | entry |
        = content_tag :li, :id => entry.title.tr(" ", "_")+'_detail' do
          <strong>#{entry.title}</strong>: #{raw entry.body}

- unless @article.study_notes.blank?
  %section.study-section.study-notes
    %h3 Study Notes
    %ol
      - @article.study_notes.each do | entry |
        = content_tag :li, :id => entry.title.tr(" ", "_")+'_detail' do
          <strong>#{entry.title}</strong>: #{raw entry.body}

- unless @article.audio.blank?
  %section.audio
    %h3 Audio
    = raw @article.audio