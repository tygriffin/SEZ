<section id="latest_articles">
  <ul>
    <% @articles.each do |article| %>
      <li class="bubble_wrapper">
        <%= image_tag(article.image, :class => "bubble_trigger") %>
        <div class="bubble_info">
          <h1><%= link_to article.title, article %></h1>
          <p><%= article.description %></p>
          <% unless article.audio.empty? %>
            <%= image_tag("/images/audio_icon.png", :class => "inline_icon") %>音声付き!
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</section>

<section id="featured_article" class="bubble_wrapper">
  <%= image_tag(@featured.image_url(:featured), :class => "bubble_trigger") %>
  <div class="bubble_info">
    <h1><%= link_to @featured.title, @featured %></h1>
    <p><%= @featured.description %></p>
    <% unless @featured.audio.empty? %>
      <%= image_tag("/images/audio_icon.png", :class => "inline_icon") %>音声付き!
    <% end %>
  </div>
</section>

<section id="latest_blog_posts">
  <ul>
    <% @posts.each do |post| %>
      <li class="bubble_wrapper">
        <%= image_tag(post.post_image_url(:main), :class => "bubble_trigger") %>
        <div class="bubble_info">
          <h1><%= link_to post.title, post %></h1>
          <p>
            <%= raw post.body %>
          </p>
        </div>
      </li>
    <% end %>
  </ul>
</section>
