<section id="latest_articles">
  <ul>
    <% @features.each do |f| %>
      <li class="bubble_wrapper">
        <%= image_tag(f.image_url(:main), :class => "bubble_trigger") %>
        <div class="bubble_info">
          <h2><%= link_to f.title, article_path(:id => f.id) %></h2>
          <p><%= f.description %></p>
          <ul class="study_tools">
            <%= content_tag(:li, "音声付き", :class => "includes_tool") unless f.audio.empty? %>
            <%= content_tag(:li, "文化説明", :class => "includes_tool") unless f.culture_notes.empty? %>
            <%= content_tag(:li, "単語付き", :class => "includes_tool") unless f.vocabulary_words.empty? %>
          </ul>
        </div>
      </li>
    <% end %>
  </ul>
</section>

