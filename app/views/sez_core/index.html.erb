<section id="latest_articles">
  <ul>
    <% @articles.each do |article| %>
      <li class="bubble_wrapper">
        <%= image_tag(article.image, :class => "bubble_trigger") %>
        <div class="bubble_info">
          <h2><%= link_to article.title, article_path(:id => article.id) %></h2>
          <p><%= article.description %></p>
          <% unless article.audio.empty? %>
            <%= image_tag("/images/audio_icon.png", :class => "inline_icon") %>音声付き!
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</section>

<section id="featured_article" class="bubble_wrapper">
  <%= image_tag(@featured.image_url.try(:featured), :class => "bubble_trigger") %>
  <div class="bubble_info">
    <h2><%= link_to @featured.title, article_path(:id => @featured.id) %></h2>
    <p><%= @featured.description %></p>
    <% unless @featured.audio.empty? %>
      <%= image_tag("/images/audio_icon.png", :class => "inline_icon") %>音声付き!
    <% end %>
  </div>
</section>

<section id="latest_blog_posts">
  <ul>
    <% @posts.each do |post| %>
      <li class="bubble_wrapper">
        <%= image_tag(post.image_url.try(:thumb), :class => "bubble_trigger") %>
        <div class="bubble_info">
          <h2><%= link_to post.title, post_path(:id => post.id) %></h2>
          <p><%= post.description %></p>
        </div>
      </li>
    <% end %>
  </ul>
</section>
